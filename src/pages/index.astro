---
import ProjectCard from '../components/ProjectCard.astro';
import '../styles/global.css';

const projects = [
	{ title: 'Software Updater', description: 'Description of Project 1', image: '/images/project1.png', github: 'https://github.com/cyclonicalperson/software-updater' },
	{ title: 'Microsoft Document Translator', description: 'Description of Project 2', image: '/images/project2.png', github: 'https://github.com/cyclonicalperson/microsoft-document-translator' },
	{ title: '2048 Game', description: 'Description of Project 3', image: '/images/project3.png', github: 'https://github.com/cyclonicalperson/2048-game' },
	{ title: 'Encoder-Decoder', description: 'Description of Project 4', image: '/images/project4.png', github: 'https://github.com/cyclonicalperson/custom-cipher-encrypter-decypter' },
];
---

<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Your Portfolio</title>
</head>
<body>
<!-- Landing Page (Welcome) -->
<header class="landing-page">
	<h1>Welcome to My Portfolio.</h1>
	<p>I am a software engineer focused on building efficient, clean solutions.</p>
</header>

<!-- Projects Section -->
<main>
	<section class="projects">
		<h2>My Projects</h2>
		<div class="projects-list">
			{projects.map(project => (
				<ProjectCard project={project} />
			))}
		</div>
	</section>

	<!-- Contact Section -->
	<footer class="contact">
		<h3>Contact Me</h3>
		<form action="https://formspree.io/f/your-form-id" method="POST">
			<input type="text" name="name" placeholder="Your Name" required />
			<input type="email" name="email" placeholder="Your Email" required />
			<textarea name="message" placeholder="Your Message" required></textarea>
			<button type="submit">Send Message</button>
		</form>
		<p>Email: <a href="mailto:your.email@example.com">your.email@example.com</a></p>
		<p>Find me on <a href="https://github.com/cyclonicalperson">GitHub</a> | <a href="https://linkedin.com/in/your-linkedin">LinkedIn</a></p>
	</footer>
</main>

<!-- Optional Footer -->
<footer>
	<p>Â© 2025 Your Name</p>
</footer>
</body>
</html>
