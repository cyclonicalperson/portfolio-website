---
import ProjectCard from '../components/ProjectCard.astro';
import '../styles/global.css';

const projects = [
	{ title: 'Software Updater',
		description: 'A lightweight yet powerful tool for keeping desktop applications up to date.\n' +
			'It automatically checks for updates, downloads the latest versions, and installs them ' +
			'without user intervention — designed for minimal disruption and maximum efficiency.',
		image: '/images/project1.png',
		github: 'https://github.com/cyclonicalperson/software-updater' },

	{ title: 'Microsoft Document Translator',
		description: 'A desktop utility that simplifies bulk translation of Microsoft Word documents using ' +
			'Microsoft’s Azure Translation API.\n' + 'Upload, configure your language pair, and get fully translated ' +
			'Microsoft Office files (.DOCX, .PPTX or .XLSX) — all in one clean interface.',
		image: '/images/project2.png',
		github: 'https://github.com/cyclonicalperson/microsoft-document-translator' },

	{ title: '2048 Game',
		description: 'A classic implementation of the popular sliding puzzle game 2048 with a crisp UI.\n' +
			'Built for desktop with custom styling and animations, offering a responsive experience ' +
			'and clean code structure, perfect for showcasing frontend logic and event handling.',
		image: '/images/project3.png',
		github: 'https://github.com/cyclonicalperson/2048-game' },

	{ title: 'Encoder-Decoder',
		description: 'A versatile encryption/decryption utility for text-based data using custom-built ciphers.\n' +
			'Great for experimenting with basic cryptography principles, the app supports encoding, decoding, ' +
			'and key-based cipher customization — useful for secure personal messaging or educational purposes.',
		image: '/images/project4.png',
		github: 'https://github.com/cyclonicalperson/custom-cipher-encrypter-decypter' },
];
---

<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Pavle Arsenijević – Portfolio</title>
</head>
<body>

<!-- Modal -->
<div class="modal">
	<img src="" alt="Project Full View" />
</div>

<!-- Landing Page -->
<header class="landing-page">
	<div class="landing-content">
		<div class="landing-text">
			<h1>Welcome.</h1>
			<p>
				My name is Pavle Arsenijevic, a Computer Science student based in Kragujevac, Serbia.
				I build productivity-focused desktop applications with clean interfaces and seamless user experiences.
				My work spans from small utilities to fully featured apps — all crafted with precision and purpose.
			</p>
		</div>
		<div class="landing-image">
			<img src="/images/cs-illustration.png" alt="CS Illustration">
		</div>
	</div>
</header>

<!-- Projects Section -->
<section class="projects-section">
	<div class="projects-content">
		<h2>My Work</h2>
		<p>A collection of projects I've made.</p>
		<div class="projects-grid">
			{projects.map(project => (
				<ProjectCard project={project} />
			))}
		</div>
	</div>
</section>

<!-- Contact Section -->
<section class="contact-section">
	<h3>Contact Me</h3>
	<form action="https://formspree.io/f/your-form-id" method="POST">
		<label>
			<input type="text" name="name" placeholder="Your Name" required />
		</label>
		<label>
			<input type="email" name="email" placeholder="Your Email" required />
		</label>
		<label>
			<textarea name="message" placeholder="Your Message" required></textarea>
		</label>
		<button type="submit">Send Message</button>
	</form>
	<p>Email: <a href="mailto:cyclonicalperson@gmail.com">cyclonicalperson@gmail.com</a></p>
	<p>Find me on <a href="https://github.com/cyclonicalperson">GitHub</a> |
		<a href="https://www.linkedin.com/in/pavle-arsenijevic-365583334/">LinkedIn</a></p>
</section>

<footer class="copyright-footer">
	<p>© 2025 Pavle Arsenijević</p>
</footer>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const modal = document.querySelector('.modal');
		const modalImg = modal.querySelector('img');

		document.querySelectorAll('.project-image').forEach(img => {
			img.addEventListener('click', () => {
				modal.style.display = 'flex';
				modalImg.src = img.src;
			});
		});

		modal.addEventListener('click', () => {
			modal.style.display = 'none';
		});
	});
</script>
</body>
</html>
